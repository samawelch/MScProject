journal = {Ecology Letters},
keywords = {Biological diversity and ecosystem functioning,microbial consortia,microbial diversity,mycorrhizal fungi,nitrogen,nitrogen fixation,phosphorus,soil Ecology Letters (2008) 11: 296-310},
month = {mar},
